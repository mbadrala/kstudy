{
  "name": "K Study",
  "description": "Look up korean words on mouse hover",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/kstudy_logo_16.png",
    "32": "images/kstudy_logo_32.png",
    "48": "images/kstudy_logo_48.png",
    "128": "images/kstudy_logo_128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/kstudy_logo_1024.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
